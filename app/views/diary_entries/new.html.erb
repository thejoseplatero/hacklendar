
<%= form_for(@diary_entry) do |f| %>

<div class = "field">
	<%= f.label :title %> <br />
	<%= f.text_field :title %>
</div>

<div class = "field">
	<%= f.label :description %> <br />
	<%= f.text_area :description %>
</div>

<div class = "field">
	<%= f.label :mood %> <br />
	<%= f.select :mood, ['Happy', 'Sad', 'Sappy'] %>
</div>


<%= f.submit %>
<% end %>